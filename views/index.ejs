<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" type="text/css">
    <title>News Api</title>
    <link rel="shortcut icon" href="/assets/favicon.png">
  </head>
  <body style="text-align:center;">
    <% include partials/nav.ejs %>
    <div class="jumbotron jumbotron-fluid" style="text-align:center;background-color:	#000!important;color:orange;">
      <h1>Top Headlines</h1>
    </div>
    <div class="container container-fluid">
      <% news.forEach(function(article){ %>
        <br>
        <div class="container container-fluid">
          <div class="card col col-lg-8 bg-light mb-3" style="text-align:center;width:80%;margin:0 auto;">
            <div class="card-body">
              <h5 class="card-title"><%=article.title%></h5>
              <p class="card-text"><%=article.description%></p>
              <a href= <%=article.link%> class="btn btn-primary">Visit Site</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </body>
</html>
